{% extends 'base.html.twig' %}

{% block title %}{{ data.title }}{% endblock %}
{% block description %}{{ data.description }}{% endblock %}

{% block body %}
        <div class="index">
                <div class="col-2">
                {% apply markdown_to_html %}
                        {{ text }}
                {% endapply %}
                </div>

                <div class="blog">
                        <h2>Derni√®res News</h2>
                        <div class="articles">
                                {% for article in articles %}
                                        <div class="article">
                                                <h3><a href="{{ path('app_article', {'id':article.data.id}) }}">{{ article.data.title }}</a></h3>
                                                <p>
                                                        {% apply markdown_to_html %}
                                                                {{ article.data.description }}
                                                        {% endapply %}
                                                </p>
                                        </div>
                                {% endfor %}
                        </div>
                        <p class="last">
                                <a class="float-right white-icon" href="{{ path('app_blog') }}">Voir les autres articles <i class="gg-chevron-right"></i></a>
                        </p>
                </div>
        </div>
{% endblock %}
