<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="description" content="{% block description %}Welcome!{% endblock %}">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header class="header">
        <nav>
            <ul>
                <li><a href="{{ path('app_index') }}">Accueil</a></li>
                <li><a href="{{ path('app_blog') }}">Blog</a></li>
                <li><a href="#">Cartographie</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>
            </ul>
        </nav>
    </header>

    <section class="layout-maxed">
        {% block body %}{% endblock %}
    </section>

    <footer class="footer">
        <nav>
            <ul>
                <li><a href="{{ path('app_apropos') }}">A propos</a></li>
                <li><a href="{{ path('app_changelog') }}">Changelog</a></li>
                <li>
                    <a target="_blank" href="https://twitter.com/EssenceHg"><i class="gg-twitter"></i> Twitter</a>
                </li>
            </ul>
        </nav>
    </footer>

    </body>
</html>
